<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- App theme based on MaterialComponents -->
    <style name="Theme.MindaKhalifah" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/deepPurple</item>
        <item name="colorPrimaryVariant">@color/deepPurple</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/buttonBlue</item>
        <item name="android:statusBarColor">@color/deepPurple</item>
        <item name="materialButtonStyle">@style/Quiz.ChoiceButton</item>
    </style>

    <!-- Choice button style -->
    <style name="Quiz.ChoiceButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/buttonBlue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:elevation">6dp</item>
        <item name="rippleColor">?attr/colorControlHighlight</item>
    </style>

    <!-- Play Again button on result screen -->
    <style name="Quiz.PlayAgainButton" parent="Quiz.ChoiceButton">
        <item name="android:backgroundTint">@color/goldYellow</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
</resources>