<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/gradient_bg">

    <ImageView
        android:id="@+id/ivTrophy"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/ic_trophy"
        android:contentDescription="trophy"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_margin="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvScore"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ðŸŽ‰ Your Score: 0/0 ðŸŽ‰"
        android:textSize="24sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:textColor="@color/goldYellow"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/ivTrophy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvResultSub"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Great job! Try again to beat your score."
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvScore"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRestart"
        style="@style/Quiz.PlayAgainButton"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Play Again"
        app:layout_constraintTop_toBottomOf="@id/tvResultSub"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>